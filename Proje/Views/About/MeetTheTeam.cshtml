@model IEnumerable<EntityLayer.Concrete.Author>
<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2>Ekibimizle Tanışın</h2>
                <p>Sitemizdeki her bir yazıyı özenle hazırlıyoruz ve okuyucularımızın ilgisini çekecek konulara odaklanıyoruz.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {
            <div style="margin-left:0px" class="col-md-6 col-lg-4 mb-5 text-center">
                <img src="@x.AuthorImg" style="height:150px"  class="img-fluid w-50 rounded-circle mb-4">
                <h2 class="mb-3 h5">@x.AuthorName</h2>
                <p>
                    @x.AuthorAbout
                </p>
                <p class="mt-5">
                    <a href="#" class="p-3"><span class="icon-facebook"></span></a>
                    <a href="https://www.instagram.com/ibrahimkkaymak/" class="p-3"><span class="icon-instagram"></span></a>
                    <a href="#" class="p-3"><span class="icon-twitter"></span></a>
                </p>
            </div>
            }
        </div>
    </div>
</div>
