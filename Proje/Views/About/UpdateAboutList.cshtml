@model IEnumerable<EntityLayer.Concrete.About>
@{

    ViewBag.Title = "UpdateAbout";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section style="width:100%" class="content">

        <div class="row">

            <div class="col-md-12">

                <div class="card card-primary">

                    <div class="card-header">

                        <h3 class="card-title">Hakkımızda Sayfası Düzenleme</h3>

                        <div class="card-tools">

                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                <i class="fas fa-minus"></i>

                            </button>

                        </div>

                    </div>
                    @using(Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                    {
                        <div class="card-body">
                            @foreach (var x in Model)
                            {
                                <div class="form-group">

                                    <label for="inputName">Ön Yazı</label>

                                    <textarea name="AboutContent2" class="form-control" rows="4">@x.AboutContent2</textarea>

                                </div>
                                <div class="form-group">

                                    <label for="inputName">Açıklama</label>

                                    <textarea name="AboutContent1" class="form-control" rows="4">@x.AboutContent1</textarea>

                                </div>

                                @*<div class="form-group">

                                        <label for="inputDescription">Project Description</label>

                                        <textarea id="inputDescription" class="form-control" rows="4">@x.AboutContent1</textarea>

                                    </div>*@

                                @*<div class="form-group">

                                        <label for="inputStatus">Status</label>

                                        <select class="form-control custom-select">

                                            <option selected disabled>Select one</option>

                                            <option>On Hold</option>

                                            <option>Canceled</option>

                                            <option selected>Success</option>

                                        </select>

                                    </div>*@

                                <div class="form-group">

                                    <label for="inputClientCompany">Görsel 1</label>

                                    <input type="text" name="AboutImage1" class="form-control" value="@x.AboutImage1">

                                </div>

                                <div class="form-group">

                                    <label for="inputProjectLeader">Görsel 2</label>

                                    <input type="text" name="AboutImage2" class="form-control" value="@x.AboutImage2">
                                    <input style="opacity:0%" type="text" name="BlogID" class="form-control" value="@x.BlogID">

                                </div>
                            }
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    }
                    <!-- /.card-body -->

                </div>

                <!-- /.card -->

            </div>



        </div>



    </section>

</body>

</html>

