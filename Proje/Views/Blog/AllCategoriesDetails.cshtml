@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "AllCategoriesDetails";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html class="wide wow-animation" lang="en">
<head>
    <!-- Site Title-->
    <title>Home</title>
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <link rel="icon" href="images/favicon.ico" type="~/Site2/site/image/x-icon">
    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Oswald:200,400%7CLato:300,400,300italic,700%7CMontserrat:900">
    <link rel="stylesheet" href="~/Site1/site/css/style.css">
    <link rel="stylesheet" href="~/Site1/site/css/fonts.css">

</head>
<body>
    <!--------------------------------------------------------------------------------------------------------------------------------------------------->
    <section class=" section section-variant-1 bg-default novi-background bg-light">
        <div class="container container-wide ">
            <div class="row row-fix justify-content-xl-end row-30 text-center text-xl-left ">
                <div style="margin-right:468px;" class="col-xl-8 ">
                    <div class="parallax-text-wrap text-left ">
                        <h3>Kategoriler</h3>
                    </div>
                    <hr class="divider divider-decorate">
                </div>
            </div>
            <div class="row row-50">
                @foreach (var x in Model)
                {

                    <div  class=" col-md-6 col-xl-4 ">
                        <article class="event-default-wrap">
                            <div class="event-default">
                                <figure class="event-default-image">
                                    <img style="width:550px;height:300px" src="@x.BlogImg" />
                                </figure>
                                <div class="event-default-caption"><a class="button button-xs button-secondary button-nina" href="/Blog/BlogByCategory/@x.CategoryID">Blogları Gör</a></div>
                            </div>
                            <div class="event-default-inner text-center">
                                <h5 ><a class="event-default-title" href="/Blog/BlogByCategory/@x.CategoryID">@x.CategoryName</a></h5>
                            </div>
                        </article>
                    </div>
                }
            </div>
        </div>
        </div>
        <!--------------------------------------------------------------------------------------------------------------------------------------------------->
    </section>
    <!-- our advantages-->
    <!-- Tips & tricks-->
    <!-- Footer Minimal-->
    </div>
    <!-- Global Mailform Output-->
    <!-- Javascript-->
    <script src="~/Site1/site/js/core.min.js"></script>
    <script src="~/Site1/site/js/script.js"></script>
    <!-- coded by barber-->
</body>
</html>



