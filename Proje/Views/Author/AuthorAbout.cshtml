@model IEnumerable<EntityLayer.Concrete.Blog>
@foreach (var x in Model)
{
    <div class="sidebar-box">
        <div class="bio text-center">
            <img src="@x.Author.AuthorImg" alt="Image Placeholder" class="img-fluid mb-5">
            <div class="bio-body">
                <h2>@x.Author.AuthorName</h2>
                <p class="mb-4">@x.Author.AuthorAbout</p>
                <p><a href="#" class="btn btn-primary btn-sm rounded px-4 py-2">Profili Gör</a></p>
                <p class="social">
                    <a href="#" class="p-2"><span class="fa fa-facebook"></span></a>
                    <a href="#" class="p-2"><span class="fa fa-twitter"></span></a>
                    <a href="#" class="p-2"><span class="fa fa-instagram"></span></a>
                    <a href="#" class="p-2"><span class="fa fa-youtube-play"></span></a>
                </p>
            </div>
        </div>
    </div>
}