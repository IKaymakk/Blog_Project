@model IEnumerable<EntityLayer.Concrete.Author>

<div style="width:1200px;height:680px;"  id="settings">
    @using (Html.BeginForm("UpdateUserProfile", "User", FormMethod.Post))
    {
        foreach (var x in Model)
        {
            <!--===============================================================================================-->

    <form class="form-horizontal">
        <div style="opacity:0;width:0px;height:0px" class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorId" value="@x.AuthorID">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorName" value="@x.AuthorName">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Mail Adresi</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="AuthorMail" value="@x.AuthorMail">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Yazar Resmi</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorImg" value="@x.AuthorImg">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Yazar Hakkında</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" id="inputSkills" value="@x.AuthorAbout">*@
                <textarea name="AuthorAbout" class="form-control" rows="4">@x.AuthorAbout</textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Yazar Detayları</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorDetail" value="@x.AuthorDetail">
            </div>
        </div>  <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon Numarası</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorPhoneNumber" value="@x.AuthorPhoneNumber">
            </div>
        </div>


        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorPassword" value="@x.AuthorPassword">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Yeni Şifre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="">
            </div>
        </div>



        <!--===============================================================================================-->

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox">Şifre Değiştirilsin
                    </label>
                </div>
            </div>
        </div>
        <button style="width:1200px;margin-top:80px" type="submit" class="btn btn-success">Bilgileri Güncelle</button>

    </form>
        }
    }
</div>
