@model IEnumerable<EntityLayer.Concrete.Comment>

    @{

    ViewBag.Title = "AdminCommentList";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    }


    <html>

    <body class="hold-transition sidebar-mini">

        <!-- Main content -->

        <section class="content">

            <div class="container-fluid">

                <div class="row">

                    <div class="card-body">

                        <!-- Post -->
                        @foreach (var x in Model)
                        {

                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="https://visualpharm.com/assets/381/Admin-595b40b65ba036ed117d3b23.svg" alt="user image">

                                <span class="username">

                                    <a href="/Blog/BlogDetails/@x.BlogID">@x.UserName / @x.Blogs.BlogTitle</a>

                                </span>

                                <span class="description">@(((DateTime)x.CommentDate).ToString("dd MMM yyyy"))</span>

                            </div>


                            <p style="margin-bottom:20px">

                                @x.Message

                            </p>

                            <a href="/Comment/ChangeCommentStatus/@x.CommentID" class="link-black text-sm mr-2"><i class="fas fa-times"></i>  Yorumu Kaldır</a>

                        </div>
                        }
                    </div>
                </div>

                </div>

        </section>

    </body>

</html>
