@using PagedList
@using PagedList.Mvc
@model IEnumerable<EntityLayer.Concrete.Comment>

@{

    ViewBag.Title = "AdminCommentListFalse";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<html>
<head>
  
</head>
<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body" style="width:1150px">

                    <!-- Post -->
                    @foreach (var x in Model)
                    {

                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="https://visualpharm.com/assets/381/Admin-595b40b65ba036ed117d3b23.svg" alt="user image">

                                <span class="username">

                                    <a href="/Blog/BlogDetails/@x.BlogID">@x.UserName / @x.Blogs.BlogTitle</a>

                                </span>

                                <span class="description">@(((DateTime)x.CommentDate).ToString("dd MMM yyyy"))</span>

                            </div>

                            <!-- /.user-block -->

                            <p style="margin-bottom:20px">

                                @x.Message

                            </p>

                            <a href="/Comment/ChangeCommentStatusTrue/@x.CommentID" class="link-black text-sm mr-2"><i class="fas fa-comment-medical"></i>   Yorumu Onayla</a>

                        </div>
                    }
                    <div>

                    </div>
                    <div style="margin-right:600px">
                        @Html.PagedListPager((IPagedList)Model, page => Url.Action("AdminCommentListFalse", new { page }))

                    </div>

                </div>
            </div>
        </div><!-- /.card-body -->



    </section>

</body>

</html>
